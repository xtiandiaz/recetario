{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "scripts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "types": ["node"],
    "strict": true,

    "paths": {
      "@/*": ["./src/*"],
      "@design-tokens/*": ["./src/assets/design-tokens/*"],
      "@vueties/*": ["./src/vueties/*"]
    }
  }
}
